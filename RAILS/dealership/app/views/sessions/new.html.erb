<article id="standard">
    <h2 id="main-text">Welcome back to luxury.</h2>

    <fieldset id="form">
    <%= form_tag(session_path) do %>
        <ul>
            <li>
                <%= label_tag :email %>
                <%= email_field_tag :email, nil %>
            </li>
            <li>
                <%= label_tag :password %>
                <%= password_field_tag :password, nil %>
            </li>
        </ul>
        <p>
            <%= submit_tag 'Sign In', class: 'button' %>
        </p>
    <% end %>
    </fieldset>

</article>
